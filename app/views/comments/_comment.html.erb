  <div>
    <%= div_for comment do %>
      <%= comment.user.email %> commented: 
      <b><%= comment.body %></b>
      <%= time_ago_in_words(comment.created_at) %> ago
      <% if current_user && current_user == comment.user %>
        <%= button_to "Delete Comment", comment, method: :delete, remote: true %><br>
      <% end %>
    <% end %>
  </div>